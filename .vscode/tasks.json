{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build/"
            },
            "group": "build",
            "command": "cmake",
            // Define CMAKE_BUILD_TYPE variable because makefiles generated by CMake are single-configuration.
            "args": ["-DCMAKE_BUILD_TYPE=Debug", ".."]
        },
        {
            "label": "CMake Release",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build/"
            },
            "group": "build",
            "command": "cmake",
            // Define CMAKE_BUILD_TYPE variable because makefiles generated by CMake are single-configuration.
            "args": ["-DCMAKE_BUILD_TYPE=Release", ".."]
        },
        {
            "label": "Build",
            "type": "shell",
            "options": {
				"cwd": "${workspaceRoot}/build/"
			},
            "group": "build",
            "command": "cmake",
            "args": ["--build", ".", "--", "VERBOSE=1"],
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "options": {
				"cwd": "${workspaceRoot}/build/"
			},
            "group": "build",
            "command": "make clean",
            "problemMatcher": []
        },
        {
            "label": "Flash",
            "type": "shell",
            "group": "build",
            "options": {
				"cwd": "${workspaceRoot}/build/"
			},
            "command": "openocd",
            "args": [
                "-f",
                "${workspaceRoot}/openocd/openocd.cfg",
                "-c program SvdGenHal.elf verify reset exit",
            ],
            "problemMatcher": []
        },
        {
            "label": "Erase",
            "type": "shell",
            "group": "build",
            "options": {
				"cwd": "${workspaceRoot}/build/"
			},
            "command": "openocd",
            "args": [
                "-f",
                "${workspaceFolder}/openocd/openocd.cfg",
                "-c init",
                "-c reset halt",
                "-c stm32h7x mass_erase 0",
                "-c exit"
            ],
            "problemMatcher": []
        }
    ]
}